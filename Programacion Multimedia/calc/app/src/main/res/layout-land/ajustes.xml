<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvAjust"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ajustes" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="102dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/Deshabilitar" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="53dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cbSuma"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="btn"
                    android:text="@string/Suma" />

                <CheckBox
                    android:id="@+id/cbResta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="btn"
                    android:text="@string/Resta" />

                <CheckBox
                    android:id="@+id/cbMulti"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="btn"
                    android:text="@string/Multi" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cbDivi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="btn"
                    android:text="@string/Divi" />

                <CheckBox
                    android:id="@+id/cbRaiz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="btn"
                    android:text="@string/Raiz" />

                <CheckBox
                    android:id="@+id/cbPorcent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="btn"
                    android:text="@string/Porcent" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="393dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="290dp"
            android:layout_height="163dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="211dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/Botones" />

            <RadioGroup
                android:id="@+id/grupoBotones"
                android:layout_width="232dp"
                android:layout_height="157dp"
                android:layout_weight="1">

                <RadioButton
                    android:id="@+id/rbGris2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="true"
                    android:onClick="btn"
                    android:text="@string/Gris" />

                <RadioButton
                    android:id="@+id/rbRosa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="btn"
                    android:text="@string/Rosa" />

                <RadioButton
                    android:id="@+id/rbAzul"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="btn"
                    android:text="@string/Azul" />
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="440dp"
            android:layout_height="187dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="211dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/Fondo" />

            <RadioGroup
                android:id="@+id/grupoFondo"
                android:layout_width="532dp"
                android:layout_height="162dp"
                android:layout_weight="1">

                <RadioButton
                    android:id="@+id/rbGris"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="true"
                    android:onClick="btn"
                    android:text="@string/Gris" />

                <RadioButton
                    android:id="@+id/rbBlanco"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="btn"
                    android:text="@string/Blanco" />

                <RadioButton
                    android:id="@+id/rbNegro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="btn"
                    android:text="@string/Negro" />
            </RadioGroup>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>